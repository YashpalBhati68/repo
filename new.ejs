<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br /><br />
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Add catchy title"
            type="text"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            type="text"
            class="form-control"
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image link" class="form-label">Image Link</label>
          <input
            name="listing[image]"
            placeholder="Enter image URL/link"
            type="url"
            class="form-control"
          />
        </div>

        <div class="row mb-3">
          <div class="col-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              type="number"
              class="form-control"
            />
          </div>

          <div class="col-8">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              placeholder="Rajasthan, Jaipur"
              type="text"
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
          />
        </div>
        <br /><br />
        <div>
          <button class="btn btn-dark add-btn">add</button>
        </div>
        <br /><br />
      </form>
    </div>
  </div>
</body>
